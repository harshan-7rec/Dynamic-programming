#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    unsigned long long dp[n + 1];
    int i;

    dp[0] = 1; // one way to make 0
    for (i = 1; i <= n; i++) {
        dp[i] = 0;
        if (i - 1 >= 0)
            dp[i] += dp[i - 1];
        if (i - 3 >= 0)
            dp[i] += dp[i - 3];
    }

    printf("%llu\n", dp[n]);
    return 0;
}
